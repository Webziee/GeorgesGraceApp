<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color for the EditText -->
    <solid android:color="@color/transparentColor"/>

    <!-- Border properties -->
    <stroke
        android:width="2dp"
        android:color="#cccccc" /> <!-- Gray border -->

    <!-- Rounded corners -->
    <corners android:radius="8dp"/>

    <!-- Padding inside the EditText -->
    <padding
        android:left="10dp"
        android:right="10dp" />
</shape>
