<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color (optional) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <!-- Border layer -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"

                android:color="#1E1E1E" />
            <corners android:radius="25dp"/>
        </shape>
    </item>
</layer-list>