<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#000" />

    <ImageView
        android:id="@+id/BottomSheetImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Left Column: Unit and Sleeper -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/BottomSheetUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="unit"
                android:textSize="18sp"
                android:padding="10dp" />

            <TextView
                android:id="@+id/BottomSheetSleeper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:text="sleeper"
                android:textSize="14sp"
                android:padding="10dp" />
        </LinearLayout>

        <!-- Right Column: Price -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_weight="1">

            <TextView
                android:id="@+id/BottomSheetPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="price"
                android:textSize="14sp"
                android:padding="10dp"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="190dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="BOOK NOW"
        android:backgroundTint="@color/black"/>

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:background="#000" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:src="@drawable/bottomslideupdes"/>

</LinearLayout>
